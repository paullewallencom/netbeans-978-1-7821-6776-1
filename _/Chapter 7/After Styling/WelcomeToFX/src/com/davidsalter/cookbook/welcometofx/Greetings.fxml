<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>

<AnchorPane id="AnchorPane" prefHeight="150.0" prefWidth="350.0" 
            xmlns:fx="http://javafx.com/fxml/1" 
            xmlns="http://javafx.com/javafx/2.2"
            fx:controller= "com.davidsalter.cookbook.welcometofx.GreetingsController">
    <children>
        <GridPane layoutX="75.0" layoutY="35.0">
            <children>
                <Label text="Hi" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="name" text="..your name here.." GridPane.columnIndex="0" GridPane.rowIndex="1" />
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
        </GridPane>
    </children>
  
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

</AnchorPane>
